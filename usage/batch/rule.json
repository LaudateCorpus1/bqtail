[
  {
    "When": {
      "Prefix": "/data/",
      "Suffix": ".avro"
    },
    "Dest": {
      "Table": "mydataset.mytable"
    },
    "Async": true,
    "Batch": {
      "Window": {
        "DurationInSec": 30
      }
    },
    "OnSuccess": [
      {
        "Action": "delete"
      }
    ],
    "OnFailure": [
      {
        "Action": "move",
        "Request": {
          "DestURL": "gs://${opsBucket}/BqTail/Errors"
        }
      }
    ]
  }
]